</listeners>


  <test thread-count="5" name="App Testing">
    <classes>
      <class name="Academy.AppTest"/>
      </classes>
       </test>
       
    <test thread-count="5" name="Validation Test Navigation Bar">
    <classes>    
      <class name="Academy.validateNavigationBar"/>
       </classes>
  </test>
  
    <test thread-count="5" name="Validation Test HomePage">
    <classes> 
